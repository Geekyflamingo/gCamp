<ol class="breadcrumb">
  <li><a><%= link_to "Tasks", project_tasks_path %> </a></li>
  <li class= "active"> <%= @task.description %></li>
</ol>

  <p>
    <strong>Description:</strong>
    <%= @task.description %>
  </p>

<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>

<p>
  <strong>Due Date:</strong>
    <% if @task.due_date %>
    <%= @task.due_date.strftime("%m/%d/%Y") %>
    <% else nil %>
    <%end%>
</p>

<table class = "table">
  <tbody>
    <% @comments.each do |comment| %>
      <tr><td><%= link_to comment.user.full_name, user_path(comment.user)%></td>
        <td><%= comment.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for([@comment], url: {action: "create_comment"}) do |f| %>

<%= f.text_area :description %>
<%= f.submit "Add Comment", class: "btn btn-primary" %>
<%end%>


<%= link_to 'Edit', edit_project_task_path(@project, @task) %> |
<%= link_to 'Back', project_tasks_path %>
