<div class= "form-horizontal">
  <%= form_for [@project, @task] do |f| %>
    <div class = "form-group">
      <div class = "col-sm-offset-2 col-sm-5">
        <%= render "shared/errors", instance: @task %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :description, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :due_date, class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
            <%= f.date_field :due_date, class: "form-control" %>
        </div>
    </div>

    <% unless params[:action] == 'create' || params[:action] == 'new' %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label><strong><%= f.check_box :complete %>Complete</strong></label>
          </div>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5"> <br>
        <%= f.submit name: button_name, class: "btn btn-primary"%>
      </div>
    </div>
    <br>
  <% end %>
</div>
