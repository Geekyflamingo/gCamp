<div class= "form-horizontal">
  <%= form_for(@task) do |f| %>

<%= render "shared/errors", instance: @task %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :description, class: "form-control" %>
      </div>
  </div>


  <div class="form-group">
      <%= f.label :due_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
          <%= f.date_field :due_date, class: "form-control" %>

      </div>
  </div>

  <% unless current_page?(new_task_path)%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <div class= "checkbox">
          <label>
            <%= f.check_box :complete %> Complete
          </label>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5"> <br>
      <%= f.submit name: button_name, class: "btn btn-primary"%>
    </div>
  </div>

  <br>
    <% end %>
</div>
