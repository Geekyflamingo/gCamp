<h1>Tasks
  <%= link_to 'Create Task', new_task_path, class:"btn btn-primary pull-right" %>
</h1>

<hr>

<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td>
          <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% else nil %>
          <%end%>
        </td>
          <td>
            <div class= "pull-right">
              <%= link_to 'Show', task, class:"btn btn-success" %>
              <%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>

<br>
