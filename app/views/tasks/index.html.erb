  <h1>Tasks

<button type="button" class="btn btn-primary pull-right">
<%= link_to 'Create Task', new_task_path %>
</button>
</h1>
<hr>
<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><button type= "button" class ="btn btn-success"><%= link_to 'Show', task %></td>
        <td><button type= "button" class ="btn btn-info"><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><button type= "button" class ="btn btn-warning"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>
