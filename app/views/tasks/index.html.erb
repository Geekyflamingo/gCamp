  <h1>Tasks


<%= link_to 'Create Task', new_task_path, class:"btn btn-primary pull-right" %>
</button>
</h1>
<hr>
<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>

