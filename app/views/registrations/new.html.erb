<div class= "col-md-4 col-md-offset-4 well well-lg text-center">
<h1>Sign Up for gCamp!</h1>

<div class= "form-horizontal">

<%= form_for @user, url: signup_path do |f| %>

  <% if @user.errors.present? %>
    <ul class= "list list-unstyled text-danger">
      <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class ="form-group">
    <%= f.label :email, class: "col-sm-2 control-label"%>
  </div>
  <div>
    <%= f.email_field :email, class: "form-control"  %>
  </div>

  <div class ="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
  </div>
  <div>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class ="form-group">
    <%= f.label :password_confirmation, "Password Confirmation", class: "col-sm-3 control-label" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class ="form-group">
    <div class= "col-sm-2 "> <br>
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
</div>
</div>
