<div class= "col-md-4 col-md-offset-4 well well-lg text-center">
<h1>Sign into gCamp</h1>

<div class= "form-horizontal">

<div class= "text-danger">
<%= form_tag signin_path do |f| %>

  <% if @sign_in_error %>
    <p>
      <%= @sign_in_error %>
    </p>
  <% end %>
</div>

  <div class ="form-group col-sm-2 control-label">
    <%= label_tag :email %>
  </div>
  <div>
    <%= email_field_tag :email %>
  </div>

  <div class ="form-group col-sm-2 control-label">
    <%= label_tag :password %>
  </div>
  <div>
    <%= password_field_tag :password %>
  </div>

  <div class ="form-group">  <br>
    <%= submit_tag "Sign in", class: "btn btn-primary" %>
  </div>

<% end %>

</div>
</div>
