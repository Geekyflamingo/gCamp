<div class= "col-md-4 col-md-offset-4 well well-lg">
  <h1 class= "sign">Sign into gCamp</h1>

  <div class= "form-horizontal">

    <%= form_tag signin_path do |f| %>

      <% if @sign_in_error %>
        <div class= "text-danger">
          <font size= "3">
            <%= @sign_in_error %>
          </font>
        </div>
      <% end %>

      <div class ="form-group col-sm-2 control-label">
        <%= label_tag :email %>
      </div>
      <div>
        <%= email_field_tag :email, "", class: "form-control" %>
      </div>

      <div class ="form-group col-sm-2 control-label">
        <%= label_tag :password %>
      </div>
      <div>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>

      <div class ="form-group col-sm-2">  <br>
        <%= submit_tag "Sign in", class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
