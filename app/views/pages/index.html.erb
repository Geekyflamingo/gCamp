<div class= "jumbotron">
        <h1><strong>gCamp</strong></h1>
        <p>Your life, organized</p>
</div>

<div class= "container">
<!-- Example row of columns -->
<div class = "row">
    <div class="col-md-4">
    <img class="img-responsive" src ="https://farm8.staticflickr.com/7378/9325995752_e4b4d0044a_m.jpg"/>
    <div class="panel-heading">
      <h2 class="panel-title" style="padding-left:128px">Tasks</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          Grouped by projects and lists. Just the way you like'em
        </div>
      </div>
    </div>
  </div>


  <div class="col-md-4">
    <img class= "img-responsive" src ="https://farm9.staticflickr.com/8538/8864977481_713b7cbda5_m.jpg"/>
    <div class="panel-heading">
      <h2 class="panel-title" style="padding-left:119px">Documents</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <img class= "img-responsive" src ="https://farm8.staticflickr.com/7365/8785432136_2f72554293_m.jpg"/>
    <div class="panel-heading">
      <h2 class="panel-title" style="padding-left:119px">Comments</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
  <% quotes=[["People who think they know everything are a great annoyance to those of us who do.", "Issac Asimov"],
            ["If you could kick the person in the pants responsible for most of your trouble, you wouldn't sit for a month.", "Theodore Roosevelt"],
            ["Get your facts first, then you can distort them as you please.","Mark Twain"]] %>

    <% quotes.each do |quote| %>
        <p>
          <%=quote [0] %>
        <p>
            <p><em> - <%=quote [1] %></em><p>
    <%end%>

</div>
