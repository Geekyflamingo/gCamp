<div class= "page-header">
  <div class= "pull-right">
    <% unless @project.memberships.where(role: 'Owner', user_id: current_user).empty? %>
      <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info" %>
    <%end%>


  </div>
  <h1><strong><%= @project.name %></strong></h1>
</div>
<div class = "form-group">
<ol class="breadcrumb">
  <li><a><%= link_to "Projects", projects_path %> </a></li>
  <li class= "active"> <%= @project.name %></li>
</ol>

<%= link_to (pluralize(@project.tasks.count, "Task")), project_tasks_path(@project, @tasks) %>

<br>

<%= link_to (pluralize(@project.memberships.count,"Member")), project_memberships_path(@project) %>
</div>
<% unless @project.memberships.where(role: 'Owner', user_id: current_user).empty? %>
<div class="well form-inline col-sm-7">
    <div class="form-group">
      <strong>Delete Project</strong>
      <p>Deleting this project will also delete <%= pluralize(@project.memberships.count, "Membership") %>,
         <%= pluralize(@project.tasks.count, "Task") %> and associated comments.</p>
      <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' },
          class: "btn btn-danger" %>
    </div>
  </div>
<%end%>
