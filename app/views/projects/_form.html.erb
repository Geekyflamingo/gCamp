<div class="page-header">
  <h1><%=title%></h1>
</div>

<div class= "form-horizontal">
  <%= form_for(@project) do |f| %>
  <div class= "form-group">
  <% if @project.errors.any? %>
    <div class= "col-sm-offset-2 col-sm-6 alert alert-danger">
      <h3><%= pluralize(@project.errors.count, "error") %> prohibited this task from being saved:</h3>
        <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4"> <br>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
  <%end%>
</div>
