<div class= "page-header">
  <div class= "pull-right">
    <%= link_to 'Create Project', new_project_path, class:"btn btn-primary" %>
  </div>

  <h1>Projects</h1>
</div>


<table class = "table">
  <thead>
    <tr>
      <th class = "col-md-2">Name</th>
      <th class = "col-md-2"> Members</th>
      <th class = "col-md-2">Tasks</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.projects.each do |project| %>
      <tr>
        <td class= "col-md-2"><%= link_to project.name, project_path(project) %></td>
        <td class = "col-md-2"><%= link_to project.memberships.count, project_memberships_path(project, @membership) %></td>
        <td class = "col-md-2"><%= link_to project.tasks.count, project_tasks_path(project, @tasks) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
